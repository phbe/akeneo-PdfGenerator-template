<!DOCTYPE html>
<html>

<head>
    <title>{{ product.identifier }} - {{ renderingDate|date }}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style type="text/css">

        {% if (null != customFont) %}
            @font-face {
                font-family: 'Custom font';
                font-style: normal;
                font-weight: 400;
                src: url({{ customFont }}) format('truetype');
            }
        {% endif %}

        * {
            font-family: 'Custom font', Helvetica;
            font-weight: 400;
        }

        .header {
            margin-bottom: 20px;
            width: 100%;
        }

        .header .logo {
            width: 25%;
            height: 80px;
            margin-left: 65%;
            margin-bottom: 0px;
        }

        .header .title {
            width: 75%;
        }

        .header .title h1 {
            margin: 0 0 5px 0;
            font-size: 34pt;
            color: #52267D;
            text-transform: none;
        }

        .header .title .rendering-date {
            font-size: 12px;
            color:#677688;
        }

        .description {
            margin-bottom: 20px;
        }

        .short-description {
            font-size: 10pt;
            color:#52267D;
            background-color:transparent;
            margin-bottom: 20px;
            text-align: justify;
        }

        .long-description {
            font-size: 11pt;
            color:#677688;
            background-color:transparent;
            text-align: justify;
        }

        .long-description .left-column {
            width: 49%;
            padding: 2px;
            position: absolute;
            left: 0;
            text-align: justify;
        }

        .long-description .right-column {
            width: 49%;
            margin-left: 51%;
            padding: 2px;
            text-align: justify;
        }

        .images {
            width: 100%;
            overflow: hidden;
            margin-bottom: 25px;
        }

        .images img {
            height: 100px;
            display: inline-block;
            padding-right: 20px;
        }

        .icon {
            width: 20px;
            display:inline-block;
            vertical-align: bottom;
            margin: 0px;
        }

        .akeneo-icon {
            background: url('data:image/png;base64,');
            height: 20px;
            background-repeat: no-repeat ;
            margin: 0px;
        }

        .group {
            margin-bottom: 25px;
        }

        .attribute-groups h3 {
            color: #52267D;
            font-size: 14px;
            font-weight: 400;
            text-transform: uppercase;
            padding: 2.5px 5px;
            border-bottom: solid 1px #ccc;
            border-top: solid 1px #ccc;
            background: #f9f9f9;
            margin: 0px;
        }

        .attributes {
            clear: both;
            position: relative;
            border-bottom: solid 1px #ccc;
        }

        .left-column {
            position: absolute;
            left: 0;
            padding: 2px 5px;
            width: 35%;
            font-size: 11pt;
            color:#677688;
        }

        .right-column {
            margin-left: 35%;
            padding: 2px 5px;
            width: 65%;
            font-size: 11pt;
            color:#677688;
        }

    </style>
</head>

<body>

    <div class="header">
        {% block header %}
        <div class="logo">
            <img src="bundles/pimui/images/logo.png" />
        </div>
        <div class="title">
            <h1>{{ product.label }} {{ product.identifier != product.label ? '(' ~ product.identifier ~ ')' : '' }}</h1>
            <span class="rendering-date">{{ renderingDate|date }}</span>
        </div>
        {% endblock %}
    </div>
    <div class="description">
        {% block description %}
            {% set long_description = product.getValue('description', locale, scope) %}
            {% set short_description = product.getValue('short_description', locale, scope) %}                        
            {% if short_description|striptags|length > 0 %}
                <div class="short-description">
                    <div class="icon akeneo-icon"></div>
                    {{ short_description|striptags }}
                </div>
            {% endif %}
            {% if long_description|striptags|length > 0 %}
                <div class="long-description">
                    {% set text = long_description|striptags|split(' ') %}
                    {% if text|length > 50 %}
                        <div class="left-column">                        
                            {% for t in text|slice(0, 55) %}
                                {{ t }} 
                            {% endfor %}
                        </div>
                        <div class="right-column">
                            {% for t in text|slice(55, 100) %}
                                {{ t }} 
                            {% endfor %}
                            {% if text|length > 100 %}...{% endif %}
                        </div>
                    {% else %}
                        {{ long_description|striptags }}
                    {% endif %}
                </div>
            {% endif %}
        {% endblock %}
    </div>
    <div class="images">
        {% block images %} 
            {% for attribute in imageAttributes %} 
                {% set imagePath = image_path(product, attribute, locale, scope) %} 
                {% if imagePath %}
                    <img src="{{ imagePath }}" /> 
                {% endif %} 
            {% endfor %} 
        {% endblock %}
    </div>
    <div class="attribute-groups">
        {% for group, attributes in groupedAttributes %}
            {% block attribute_group %}
                <div class="group">
                    <h3>{{ group }}{{ group.name }}</h3>
                    {% for attribute in attributes %}
                        {% if attribute.code != 'description' and attribute.code != 'short_description' %}
                            {% block attribute %} 
                                {% if 'pim_catalog_image' == attribute.attributeType and product.getValue(attribute.code, locale, scope).media is not null %} 
                                    {% set content = product.getValue(attribute.code, locale, scope).media.originalFilename %} 
                                    {% set manualHeight = false %} 
                                {% else %} 
                                    {% set content = product.getValue(attribute.code, locale, scope) %} 
                                    {% if content != null %} 
                                        {% set manualHeight = attribute.label|length >(content.__toString()|length / 3) %} 
                                    {% else %} 
                                        {% set manualHeight = true %} 
                                    {% endif %} 
                                {% endif %}
                                <div class="attributes" {% if manualHeight %} style="height: {{ (attribute.label|length / 30)|round(0, 'ceil') * 18 + 10 }}px" {% endif %}>
                                    <div class="left-column">
                                        {{ attribute.label }}
                                    </div>
                                    <div class="right-column">
                                        {% if 'pim_catalog_textarea' == attribute.attributeType and attribute.isWysiwygEnabled %} 
                                            {{ content|raw }}
                                        {% else %} 
                                            {{ content }} 
                                        {% endif %} 
                                        &nbsp;
                                    </div>
                                </div>
                            {% endblock %} 
                        {% endif %}
                    {% endfor %}
                </div>
            {% endblock %}
        {% endfor %}
    </div>
</body>

</html>